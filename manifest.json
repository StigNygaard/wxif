{
  "manifest_version": 2,
  "name": "xIFr",
  "version": "0.1.0",
  "default_locale": "en",

  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/StigNygaard/xIFr",

  "icons": {
    "16": "icons/fxif.png",
    "32": "icons/fxif.png",
    "48": "icons/fxif.png",
    "96": "icons/fxif.png"
  },

  "permissions": [
    "<all_urls>",
    "contextMenus",
    "activeTab"
  ],

  "background": {
    "scripts": ["backgroundscript.js"]
  }
}
